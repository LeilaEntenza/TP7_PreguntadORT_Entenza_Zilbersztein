@{
    ViewData["Title"] = "Categoría";
    <link href="https://fonts.cdnfonts.com/css/mikado" rel="stylesheet">
}

<p class="index">Puntaje actual: @ViewBag.puntos</p>
<p>@ViewBag.numeroRandom</p>
<div class="RyG">
  <div class="bodyruleta2">
    <div id="ruleta" class="ruleta">
      <img class="Ruleta" id="imgruleta" src="/images/RuletaMejorada.png">
      <img onclick="girar()" id="girar" class="girar" src="/images/girar.png">
    </div>
  </div>
</div>
<form id="ruletaForm">
    <input type="hidden" name="categoriaElegida" id="categoriaElegida" value="">
    <h2>Dificultad</h2>
    <div class="formulario">
    <input class="opciones" type="radio" name="dificultadElegida" value="1" checked>Fácil
    <input class="opciones" type="radio" name="dificultadElegida" value="2">Normal
    <input class="opciones" type="radio" name="dificultadElegida" value="3">Difícil
    </div>
    <h2>Modo de juego</h2>
    <div class="formulario">
    <input class="opciones" type="radio" name="modoElegido" value="1" checked>Normal
    <input class="opciones" type="radio" name="modoElegido" value="2">Racha
    </div>
</form>



<img class="PersonajeRuleta" src="/images/AcompañamientoRuleta.png">
<img class="PersonajeRuleta2" src="/images/GeografiaRuleta.png">